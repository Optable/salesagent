# AdCP Sales Agent Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
# For PostgreSQL (production)
DATABASE_URL=postgresql://adcp_user:secure_password@localhost:5432/adcp
# Or use individual settings:
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=adcp
# DB_USER=adcp_user
# DB_PASSWORD=secure_password

# API Keys
GEMINI_API_KEY=your-gemini-api-key-here

# Server Ports
ADCP_SALES_PORT=8080
ADMIN_UI_PORT=8001

# Admin UI Authentication
# Comma-separated list of super admin emails
SUPER_ADMIN_EMAILS=admin@example.com,cto@example.com
# OR use domain-based access
SUPER_ADMIN_DOMAINS=example.com,company.com

# Google OAuth Configuration (for Admin UI)
# Either provide the JSON file path:
GOOGLE_OAUTH_CREDENTIALS_FILE=client_secret.json
# Or provide credentials directly:
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-client-secret

# Slack Integration (optional)
# Main notifications webhook (tasks, creatives)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# Audit log webhook (separate channel for audit logs)
SLACK_AUDIT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/AUDIT/WEBHOOK

# Operational Settings
# Enable dry-run mode globally
# ADCP_DRY_RUN=true

# Default adapter when not specified in tenant config
# ADCP_ADAPTER=mock

# Ad Server Credentials (if using real adapters)
# Google Ad Manager
# GAM_NETWORK_CODE=123456789
# GAM_SERVICE_ACCOUNT_JSON='{"type":"service_account"...}'

# Kevel
# KEVEL_API_KEY=your-kevel-api-key
# KEVEL_NETWORK_ID=your-network-id

# Triton Digital
# TRITON_API_KEY=your-triton-api-key
# TRITON_STATION_ID=your-station-id

# Data Directory (for SQLite)
# DATA_DIR=/var/lib/adcp